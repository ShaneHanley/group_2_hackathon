# Database (IAM API - separate from Keycloak DB)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=iam
DB_PASSWORD=iam
DB_DATABASE=iam

# Keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=CSIS
KEYCLOAK_CLIENT_ID=csis-iam-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# Email (for password reset - use SMTP or mock for demo)
SMTP_HOST=smtp.csis.edu
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
